extends ../layout

block content
  div.container
    div.well.well-lg
      h2 Signup
      if errors
        for error in errors
          p.errors= error
      form(action='' method='post')
        div.form-group
          label(for='username') Username
          input.form-control(id='username' type='email' name='username' placeholder='email')
        div.form-group
          label(for='password') Password
          input.form-control(id='password' type='password' name='password' placeholder='password')
        div.form-group
          label(for='password-confirmation') Password Confirmation
          input.form-control(id='password-confirmation' type='password' name='password_confirmation' placeholder='password confirmation')
        div.form-group
          input.form-control(type='submit' value='Submit')
